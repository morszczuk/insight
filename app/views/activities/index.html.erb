<div class="main-header">
  <%= image_tag("unnamed.png", class: "main-logo")%>
</div>

<div class="main-background index-background">
  <div class="main-title index-title">
    <%=t '.title', default: "Tell us about your training" %>
  </div>

  <div class = "centered_div">
    <%= link_to t('.new', default: "add new training"),
              new_activity_path,
              class: 'btn btn-primary btn-index-main btn-margin' %>
  </div>
</div>

<div class="main-title small-title centered_div">
  <%=t '.title', default: "What you achieved recently" %>
</div>

<%- model_class = Activity -%>
<div class="training_container">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:sport) %></th>
      <th>Number of laps</th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
          <td><%= activity.name %></td>
          <td><%= activity.sport %></td>
          <td><%= activity.laps.count %></td>
        <td>
          <%= link_to activity_path(activity), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
