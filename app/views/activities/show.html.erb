<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @activity.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sport) %></dt>
      <dd><pre class="prettyprint"><%= @activity.sport %></pre></dd>
      <dt class="label label-default">Laps</dt>
      <dd><pre class="prettyprint"></pre>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Id</th>
              <th>Start time</th>
              <th>Total time (in seconds)</th>
              <th>Distance (in meters)</th>
              <th>Maximum speed</th>
              <th>Intensity</th>
            </tr>
          </thead>
          <tbody>
            <% @activity.laps.each do |lap| %>
              <tr>
                <td><%= lap.id %></td>
                <td><%= lap.start_time %></td>
                <td><%= lap.lap_summary.total_time_seconds %></td>
                <td><%= lap.lap_summary.distance_meters %></td>
                <td><%= lap.lap_summary.maximum_speed %></td>
                <td><%= lap.lap_summary.intensity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              activities_path, class: 'btn btn-default'  %>
  <%#<%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_activity_path(@activity), class: 'btn btn-default' %>
  <%#<%= link_to t('.destroy', default: t("helpers.links.destroy")),%>
              <%#activity_path(@activity),%>
              <%#method: 'delete',%>
              <%#data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },%>
              <%#class: 'btn btn-danger' %>
</div>