<div class="main-header">
  <%= image_tag("unnamed.png", class: "main-logo")%>
</div>


<%- model_class = Activity -%>

<div class="training_container training_info">
  <div class="training-title">
    <%=t '.title', default: @activity.name, model: model_class.model_name.human.titleize %>
    <div class="main-title sport-title">
      <%=t '.title', default: @activity.sport, model: model_class.model_name.human.titleize %>
    </div>
  </div>
</div>

<div class="main-title laps-title centered_div">
  <%=t '.title', default: "Laps" %>
</div>

        <table class="main-table">
          <thead>
            <tr class="main-table">
              <th class="main-table header_table">Id</th>
              <th class="main-table header_table">Start time</th>
              <th class="main-table header_table">Total time (in seconds)</th>
              <th class="main-table header_table">Distance (in meters)</th>
              <th class="main-table header_table">Maximum speed</th>
              <th class="main-table header_table">Intensity</th>
            </tr>
          </thead>
          <tbody>
            <% @activity.laps.each do |lap| %>
              <tr class="main-table">
                <td class="main-table training_table"><%= lap.id %></td>
                <td class="main-table training_table"><%= lap.start_time %></td>
                <td class="main-table training_table"><%= lap.lap_summary.total_time_seconds %></td>
                <td class="main-table training_table"><%= lap.lap_summary.distance_meters %></td>
                <td class="main-table training_table"><%= lap.lap_summary.maximum_speed %></td>
                <td class="main-table training_table"><%= lap.lap_summary.intensity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


